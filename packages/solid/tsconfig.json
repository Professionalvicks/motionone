{
  "extends": "config/ts-base.json",
  "$schema": "https://json.schemastore.org/tsconfig",
  "include": ["src/**/*.ts", "**/*.ts", "**/*.tsx"],
  "exclude": ["**/__tests__/*"],
  "compilerOptions": {
    "rootDir": "./src",
    "outDir": "./lib",
    "declarationDir": "./types",
    "jsx": "preserve",
    "jsxImportSource": "solid-js",
    "allowJs": true,
    "checkJs": false
  }
}
