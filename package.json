{
  "name": "motionone-monorepo",
  "version": "0.0.0",
  "private": true,
  "workspaces": [
    "sites/*",
    "packages/*"
  ],
  "scripts": {
    "build": "turbo run build",
    "dev": "turbo run dev --parallel",
    "lint": "turbo run lint",
    "test": "turbo run test",
    "format": "prettier --write '**/*.{ts,tsx,.md}'",
    "publish": "npm run build && lerna publish",
    "publish-alpha": "npm run build && lerna publish --npm-tag alpha",
    "publish-beta": "npm run build && lerna publish --npm-tag beta",
    "deploy": "turbo run build test lint deploy"
  },
  "devDependencies": {
    "@changesets/cli": "^2.18.1",
    "@rollup/plugin-node-resolve": "^13.0.6",
    "@rollup/plugin-replace": "^3.0.0",
    "@types/jest": "^27.0.3",
    "jest": "^27.4.4",
    "lerna": "^4.0.0",
    "prettier": "^2.5.1",
    "rollup-plugin-terser": "^7.0.2",
    "ts-jest": "^27.1.1",
    "turbo": "latest"
  },
  "turbo": {
    "npmClient": "npm",
    "baseBranch": "origin/main",
    "pipeline": {
      "build": {
        "dependsOn": [
          "^build"
        ],
        "outputs": [
          "dist/**",
          ".next/**"
        ]
      },
      "lint": {
        "outputs": []
      },
      "test": {
        "dependsOn": [
          "build"
        ],
        "outputs": []
      },
      "deploy": {
        "dependsOn": [
          "build",
          "test",
          "lint"
        ]
      },
      "publish": {
        "dependsOn": [
          "build",
          "test",
          "lint"
        ]
      },
      "dev": {
        "cache": false
      }
    }
  },
  "dependencies": {
    "rollup": "^2.61.1"
  }
}
