{
  "name": "motion",
  "version": "10.4.0",
  "description": "The Motion library for the web",
  "author": "Matt Perry",
  "main": "dist/main.cjs.js",
  "module": "dist/main.es.js",
  "types": "types/index.d.ts",
  "license": "MIT",
  "sideEffects": false,
  "keywords": [
    "motion",
    "animation",
    "bezier",
    "cubic bezier",
    "easing",
    "waapi"
  ],
  "scripts": {
    "build": "npm run build-dom && npm run build-vue && npm run measure",
    "build-dom": "rm -rf lib dist types && tsc -p . && rollup -c",
    "build-vue": "cross-env NODE_ENV=production rollup --config rollup.config.vue.js",
    "build-vue:ssr": "cross-env NODE_ENV=production rollup --config rollup.config.vue.js --format cjs && npm run build-vue:ssr && npm run build-vue:es && npm run build-vue:unpkg",
    "build-vue:es": "cross-env NODE_ENV=production rollup --config rollup.config.vue.js --format es",
    "build-vue:unpkg": "cross-env NODE_ENV=production rollup --config rollup.config.vue.js --format iife",
    "test": "npm run test-dom && npm run test-svelte && npm run test-vue && npm run test-react-ssr",
    "test-dom": "jest --coverage --config jest.config.js",
    "test-svelte": "jest --coverage --config jest.config.svelte.js",
    "test-vue": "vue-cli-service test:unit --config jest.config.vue.js",
    "test-react-ssr": "jest --coverage --config jest.config.react-ssr.json",
    "test-browser": "node ./cypress/scripts/collect-tests.js && start-server-and-test start-dev-server http://0.0.0.0:8000 'cypress run'",
    "watch": "concurrently \"tsc --watch -p .\" \"rollup -c -w\" \"npm run dev\"",
    "format": "yarn prettier --write .",
    "postpublish": "git push --tags",
    "prepublishOnly": "yarn test && yarn build",
    "storybook": "start-storybook -p 6006",
    "dev": "python -m SimpleHTTPServer",
    "dev-svelte": "svelte-kit dev",
    "dev-vue": "vue-cli-service serve vue/src/main.ts",
    "measure": "webpack --config webpack.config.cjs && bundlesize",
    "build-storybook": "build-storybook"
  },
  "dependencies": {
    "framer-motion": "^4.1.17",
    "hey-listen": "^1.0.8",
    "tslib": "^2.3.0"
  },
  "peerDependencies": {
    "react": "^17.0.2",
    "react-dom": "^17.0.2"
  },
  "peerDependenciesMeta": {
    "react": {
      "optional": true
    },
    "react-dom": {
      "optional": true
    }
  },
  "devDependencies": {
    "@babel/core": "^7.14.6",
    "@babel/preset-env": "^7.14.7",
    "@babel/preset-typescript": "^7.14.5",
    "@rollup/plugin-alias": "^3.1.2",
    "@rollup/plugin-babel": "^5.3.0",
    "@rollup/plugin-commonjs": "^19.0.2",
    "@rollup/plugin-node-resolve": "^11.2.0",
    "@rollup/plugin-replace": "^2.4.1",
    "@rollup/plugin-typescript": "^8.3.0",
    "@sveltejs/kit": "next",
    "@testing-library/dom": "^8.1.0",
    "@testing-library/jest-dom": "^5.14.1",
    "@testing-library/react": "^12.0.0",
    "@testing-library/svelte": "^3.0.3",
    "@testing-library/vue": "next",
    "@tsconfig/svelte": "^2.0.1",
    "@types/jest": "^27.0.3",
    "@types/react": "^17.0.15",
    "@types/react-dom": "^17.0.9",
    "@vue/cli-plugin-babel": "5.0.0-rc.1",
    "@vue/cli-plugin-typescript": "5.0.0-rc.1",
    "@vue/cli-plugin-unit-jest": "5.0.0-rc.1",
    "@vue/cli-service": "5.0.0-rc.1",
    "@vue/compiler-sfc": "^3.0.0",
    "@vue/eslint-config-prettier": "^6.0.0",
    "@vue/eslint-config-typescript": "^7.0.0",
    "@vue/test-utils": "^2.0.0-0",
    "@vue/vue3-jest": "^27.0.0-alpha.4",
    "@zerollup/ts-transform-paths": "^1.7.18",
    "babel-loader": "^8.2.2",
    "bundlesize": "^0.18.1",
    "concurrently": "^6.2.0",
    "convert-tsconfig-paths-to-webpack-aliases": "^0.9.2",
    "cross-env": "^7.0.3",
    "husky": "=4",
    "jest": "^27.3.1",
    "jest-watch-typeahead": "^0.6.1",
    "lint-staged": ">=10",
    "minimist": "^1.2.5",
    "prettier": "2.2.1",
    "prettier-plugin-svelte": "^2.4.0",
    "rimraf": "^3.0.2",
    "rollup": "^2.52.3",
    "rollup-plugin-css-only": "^3.1.0",
    "rollup-plugin-svelte": "^7.1.0",
    "rollup-plugin-terser": "^7.0.2",
    "rollup-plugin-typescript2": "^0.31.1",
    "start-server-and-test": "^1.12.5",
    "svelte": "^3.42.6",
    "svelte-check": "^2.2.6",
    "svelte-jester": "^2.1.5",
    "svelte-preprocess": "^4.9.4",
    "ts-jest": "^27.0.7",
    "ts-loader": "^8.3.0",
    "ttypescript": "^1.5.13",
    "typescript": "^4.5.2",
    "vue": "^3.2.23",
    "web-animations-js": "^2.3.2",
    "webpack": "^5.58.1",
    "webpack-cli": "^4.8.0"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "**/*": "prettier --write --ignore-unknown"
  },
  "eslintConfig": {
    "overrides": [
      {
        "files": [
          "**/*.stories.*"
        ],
        "rules": {
          "import/no-anonymous-default-export": "off"
        }
      }
    ]
  },
  "bundlesize": [
    {
      "path": "./dist/size-animate-dom.js",
      "maxSize": "3.4 kB"
    },
    {
      "path": "./dist/size-animate-style.js",
      "maxSize": "2.9 kB"
    },
    {
      "path": "./dist/size-timeline-dom.js",
      "maxSize": "4.3 kB"
    },
    {
      "path": "./dist/size-spring.js",
      "maxSize": "1 kB"
    },
    {
      "path": "./dist/size-react.js",
      "maxSize": "4.5 kB"
    },
    {
      "path": "./dist/size-webpack-animate.js",
      "maxSize": "3.4 kB"
    }
  ]
}
